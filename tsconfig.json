{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"rootDir": "./",
		"declaration": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"],
			"@utils/*": ["./utils/*"],
			"@solutions/*": ["./solutions/*"]
		}
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
